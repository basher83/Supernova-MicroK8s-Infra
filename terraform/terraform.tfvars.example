# Proxmox Configuration
pm_password      = "xxxxxx"
template_id      = "xxxxxx" # ID should be a number
target_node      = "xxxxxx"
ssh_public_key   = "xxxxxx" # can be generated with ssh-keygen -t rsa in case you don't have one
proxmox_endpoint = "https://192.168.1.100:8006/" # Update to your Proxmox IP

# Network Configuration
home_network = {
  gateway     = "192.168.1.1"  # Your home router IP
  bridge      = "vmbr0"        # Home network bridge
  cidr_suffix = "/24"
}

cluster_network = {
  gateway     = "192.168.3.1"  # Cluster network gateway (Proxmox IP on cluster network)
  bridge      = "vmbr1"        # Cluster network bridge
  cidr_suffix = "/24"
}

# Cluster Configuration
cluster_ips = {
  masters = ["192.168.3.11", "192.168.3.12"]
  workers = ["192.168.3.21", "192.168.3.22", "192.168.3.23"]
}

jumpbox_address    = "192.168.1.240/24" # Jumpbox IP on home network
jumpbox_cluster_ip = "192.168.3.250"    # Jumpbox IP on cluster network

# Cluster VMs Configuration
# IP addresses will be automatically assigned from cluster_ips above
cluster_vms = [
  { name = "master-1", ip = "192.168.3.11", cores = 2, memory = 4096, disk = 32 },
  { name = "master-2", ip = "192.168.3.12", cores = 2, memory = 4096, disk = 32 },
  { name = "worker-1", ip = "192.168.3.21", cores = 2, memory = 4096, disk = 32 },
  { name = "worker-2", ip = "192.168.3.22", cores = 2, memory = 4096, disk = 32 },
  { name = "worker-3", ip = "192.168.3.23", cores = 2, memory = 4096, disk = 32 },
]
