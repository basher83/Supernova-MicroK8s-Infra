# Proxmox API Configuration
pve_api_url       = "https://proxmox.example.com:8006/api2/json"
pve_api_token     = "user@pam!token-id=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
proxmox_insecure  = false  # Set to true only for dev environments with self-signed certs

# Proxmox SSH Configuration (required for file uploads)
proxmox_ssh_username = "root"  # SSH username for Proxmox hosts

# Network Configuration
vault_network_subnet = "192.168.10"  # Adjust to your network subnet (without last octet)

# VM Template
template_id   = 8000    # Ubuntu 22.04 LTS template ID in Proxmox
template_node = "lloyd" # Node where the template exists

# Storage Configuration
vm_datastore = "local-lvm"  # Proxmox datastore for VM disks

# Network Bridge
vm_bridge_1 = "vmbr0"  # Primary network bridge in Proxmox

# SSH Configuration
ci_ssh_key = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIG... your-ssh-public-key"

# Cloud-init username (default is ubuntu for Ubuntu templates)
cloud_init_username = "ubuntu"

# Tags for resource identification
vm_tags = ["terraform", "vault", "production", "hercules"]
